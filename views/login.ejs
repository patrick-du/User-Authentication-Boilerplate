<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card p-5">
            <p class="my-0 display-4 text-center">Existing User</p>
            <hr class="my-4" />
            <% include ./partials/messages %>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <input type="email" id="email" name="email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password" />
                </div>
                <hr class="my-4" />

                <button type="submit" class="btn btn-s btn-block">Login</button>
            </form>

            <p class="lead mt-3 text-center">No account? <a class="link" style="color: #27ae60"
                    href="/users/register">Register</a>
            </p>
        </div>
    </div>
</div>