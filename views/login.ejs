<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card p-5">
            <a href="/" class="link mb-3">
                <i class="fas fa-times hvr-grow" style='font-size: 30px; color: #e74c3c'></i>
            </a>
            <p class="my-0 display-4 text-center">Existing User</p>
            <hr class="my-4" />
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <input type="email" id="email" name="email" class="form-control hvr-grow" placeholder="Email" />
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="password" class="form-control hvr-grow"
                        placeholder="Password" />
                </div>
                <hr class="my-4" />

                <button type="submit" class="btn btn-s btn-block">Login</button>
            </form>

            <p class="lead mt-3 text-center">No account? <a class="link" style="color: #2ecc71"
                    href="/users/register"><b>Register</b></a>
            </p>
            <% include ./partials/messages %>

        </div>
    </div>
</div>