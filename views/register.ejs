<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card p-5">
            <p class="my-0 display-4 text-center">New User</p>
            <hr class="my-4" />
            <form action="/users/register" method="POST">
                <div class="form-group ">
                    <input type="name" id="name" name="name" class="form-control hvr-grow" placeholder="Full Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                <div class="form-group">
                    <input type="email" id="email" name="email" class="form-control hvr-grow" placeholder="Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="password" class="form-control hvr-grow"
                        placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group">
                    <input type="password" id="password2" name="password2" class="form-control hvr-grow"
                        placeholder="Confirm Password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>
                <hr class="my-4" />
                <button type="submit" class="btn btn-p btn-block">
                    Register
                </button>
            </form>
            <p class="lead mt-3 text-center">Already have an account? <a class="link" style="color: #2980b9"
                    href="/users/login">Login </a>
            </p>
            <% include ./partials/messages %>

        </div>
    </div>
</div>